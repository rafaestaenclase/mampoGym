	{% extends 'layout.twig' %}


	{% block content %}
		<style type="text/css">
			.postContent{
				background-color: #E8CAE4;
				border-radius: 12px;
				width: 80%;
				margin: 0 auto;
			}

			.form-group{
				text-align: center;
			}
			img{
				display: block;
				margin: 0 auto;
				width: 50%;
			}
		</style>
		
			<div class="postContent col-sm-12 col-lg-6">
				<div class="form-group">
					<h2>{{post.title}}</h2>
				</div>

				<div class="form-group">
					<p>{{post.rawData}}</p>
				</div>

				<img src="{{post.url}}">
				<div class="form-group">
					<p>
						{{post.datePost}}
						<a href="index.php?action=runProfileByNickname&nickname={{post.nickname}}">{{post.nickname}}</a>
					</p>
				</div>
			</div>


	{% endblock %}
