	{% extends 'layout.twig' %}

	{% block content %}
		<style type="text/css">
			.card img {
			  object-fit:cover;
			  object-position: center;
			  width: 100%;
			  max-height: 250px;
			  margin-bottom: 1rem;
			}
		</style>

		<div class="col-12 ml-5 mt-3 red">EVENTOS</div>
		<div class="row justify-content-center">
			{% for evento in eventos%}
			<div class="card m-3" style="width: 18rem;">
			  <div class="card-body">
			    <h5 class="card-title">{{evento.nombre}}</h5>
			    <p class="card-text small">{{evento.lugar}} {{evento.fecha}}</p>
			  </div>
			  <img class="card-img-top" src="{{evento.foto}}" alt="Card image cap">
			</div>
			{% endfor %}
		</div>
	{% endblock %}
